#:set padx dp(15)
#:set pady dp(20)

<InfoCard@MDCard>:
    title: ""
    subtitle: ""
    description: ""
    button_text: ""
    elevation: 6
    spacing: dp(20)
    radius: [dp(10)]
    size_hint_y: None
    padding: 0, dp(20)
    orientation: 'vertical'
    height: self.minimum_height
    MDBoxLayout:
        pos_hint: {'center_x': .5}
        adaptive_height: True
        orientation: 'vertical'
        radius: [dp(10)]
        spacing: dp(5)
        MDLabel:
            bold: True
            text: root.title
            font_style: "H6"
            halign: "center"
            adaptive_height: True
            font_name: "assets/fonts/GothamRounded-Bold.ttf"
        MDLabel:
            text: "[color=#da4453]" + root.subtitle + "[/color]"
            font_style: "Caption"
            halign: "center"
            adaptive_height: True
            markup: True
            font_name: "assets/fonts/NexaDemo-Light.ttf"
    MDLabel:
        text: root.description
        font_style: "Caption"
        halign: "center"
        adaptive_height: True
        line_height: 1.4
        padding: dp(5), 0
        font_name: "assets/fonts/NexaDemo-Light.ttf"
    MDButton:
        size_hint_x: .7
        pos_hint: {'center_x': .5}
        text: root.button_text
# END InfoCard

<MDButton@MDCard>:
    size_hint_y: None
    height: dp(35)
    radius: [dp(7)]
    md_bg_color: C("#da4453")
    text: ""
    ripple_behavior: True
    MDLabel:
        text: "[color=#ffffff]" + str(root.text).upper() + "[/color]"
        markup: True
        bold: True
        font_size: sp(14)
        halign: "center"
# END MDButton

<FirstCardItem@MDBoxLayout>:
    orientation: 'vertical'
    adaptive_height: True
    spacing: dp(10)
    text_color: 1,1,1
    icon: "trophy-variant"
    title: "-"
    description: "-"
    MDIcon:
        icon: root.icon
        theme_text_color: "Custom"
        text_color: root.text_color
        pos_hint: {'center_x': .5}
        adaptive_height: True
        halign: "center"
        font_size: sp(45)
    MDLabel:
        text: root.title
        font_style: "Subtitle1"
        halign: "center"
        adaptive_height: True
        bold: True
        font_name: "assets/fonts/GothamRounded-Bold.ttf"
    MDLabel:
        text: root.description
        font_style: "Caption"
        halign: "center"
        line_height: 1.5
        adaptive_height: True
        font_name: "assets/fonts/NexaDemo-Light.ttf"
# END FirstCardItem

<MDStar@MDLabel>:
    star: 1
    total: None
    markup: True
    font_size: sp(16)
    halign: "center"
    adaptive_height:True
    text:
        "[color=#f6bb42]" + \
        " ".join([f"[font=Icons]{I['star']}[/font]" for _ in range(root.star)]) + \
        (" ".join([f"[font=Icons]{I['star-outline']}[/font]" for _ in range((root.total - root.star))]) if root.total else "") + \
        "[/color]"
# END MDStar

<SecondCardItem@MDCard>:
    orientation: 'vertical'
    elevation: 6
    size_hint_y: None
    height: self.width * 1.4
    radius: [dp(5)]
    star: 1
    title: ""
    image: "assets/04.jpg"
    FitImage:
        size_hint: None, None
        pos: root.pos
        size: root.size
        radius: [dp(5)]
        source: root.image
    FloatLayout:
        MDBoxLayout:
            orientation: 'vertical'
            adaptive_height:True
            pos_hint: {'center_x': .5, "y": 1}
            spacing: dp(7)
            padding: 0, dp(7)
            md_bg_color: .2,.2,.2,.7
            radius: [dp(5), dp(25), dp(5), dp(5)]
            MDBoxLayout:
                orientation: 'vertical'
                adaptive_height:True
                MDLabel:
                    text: "[color=#ffffff]" + root.title + "[/color]"
                    font_style: 'Subtitle1'
                    halign: "center"
                    bold: True
                    markup: True
                    adaptive_height: True
                    font_name: "assets/fonts/GothamRounded-Bold.ttf"
                MDStar:
                    star: root.star
                    total: 5
            MDButton:
                size_hint_x: None
                height: dp(35)
                width: root.width - dp(14)
                pos_hint: {'center_x': .5}
                text: "PURCHASE"
# END SecondCardItem

<ThirdCardItem@MDCard>:
    orientation: 'vertical'
    elevation: 6
    size_hint_y: None
    height: self.width * 1.2
    radius: [dp(10)]
    icon_color: C("#f6bb42")
    icon: " "
    title: ""
    subtitle: ""
    image: "assets/04.jpg"
    FitImage:
        size_hint: None, None
        pos: root.pos
        size: root.size
        radius: [dp(10)]
        source: root.image
    FloatLayout:
        MDBoxLayout:
            orientation: 'vertical'
            pos_hint: {'center_x': .5, "y": 1}
            padding: dp(7), dp(7)
            md_bg_color: .1,.1,.1,.9
            radius: [dp(10)]
            size_hint: None, None
            size: root.size
            MDIcon:
                icon: root.icon
                font_size: sp(50)
                theme_text_color: "Custom"
                text_color: root.icon_color
            MDBoxLayout:
            MDBoxLayout:
                orientation: 'vertical'
                adaptive_height:True
                spacing: dp(3)
                MDLabel:
                    text: "[color=#ffffff]" + root.title + "[/color]"
                    adaptive_height: True
                    font_style: 'H6'
                    markup: True
                    font_name: "assets/fonts/GothamRounded-Bold.ttf"
                MDLabel:
                    text: "[color=#ffffff]" + root.subtitle + "[/color]"
                    font_style: "Caption"
                    markup: True
                    adaptive_height: True
# END ThirdCardItem

<SocialMDIcon@MDIcon>:
    icon: ""
    user_font_size: sp(10)
    theme_text_color: "Custom"
    text_color: 1,1,1,1
    size_hint: None, None
    size: dp(35), dp(35)
    halign: "center"
    radius: [dp(10)]
# END SocialMDIcon

<LMDContainer@ILeftBodyTouch+MDBoxLayout>

<RMDContainer@IRightBodyTouch+MDBoxLayout>

